            <anim name="revenant_heirloom_charge"                 weight="revenant_heirloom * (1-charge_lerp)"/>
            <anim name="revenant_heirloom_charge_var2"             weight="revenant_heirloom * charge_lerp"/>
        </target>
    </tweak>
    
