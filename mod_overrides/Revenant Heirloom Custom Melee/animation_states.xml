<?xml version="1.0"?>
<tweaks>
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_states">
        <search>
            <xml/>
            <state name="fps/melee_start"/>
            <anim name="melee_start" weight="melee_knife"/>
        </search>
        <target mode="append">
            <anim name="revenant_heirloom_start" weight="revenant_heirloom"/> 
			
			<keys>
				<key at="trigger" trigger="drawgrab" callback="play_sound" class_name="base" param1="drawgrab"/>
			</keys> 
			
        </target>
    </tweak>
    
